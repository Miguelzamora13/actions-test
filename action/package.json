{
  "name": "action",
  "version": "1.0.0",
  "description": "",
  "main": "lib/main.js",
  "scripts": {
    "scripts": {
      "build": "tsc",
      "format": "prettier --write '**/*.ts'",
      "format-check": "prettier --check '**/*.ts'",
      "package": "ncc build --source-map",
      "lint": "eslint --max-warnings 0 src/**/*.ts",
      "all": "npm run format && npm run lint && npm run build && npm run package"
    }
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  }
}
